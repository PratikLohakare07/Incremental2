


 @model Player

<h2>Adding Department </h2>
<hr>
@using (Html.BeginForm())
{
    <div class ="form-horizontal">
        @Html.ValidationSummary(true,"",new{@class="text-danger"})
        <div class=form-group>
            @Html.DisplayNameFor(d=>d.Id)
            @Html.EditorFor(d=>d.Id)
        </div>
         <div class=form-group>
            @Html.DisplayNameFor(d=>d.Name)
            @Html.EditorFor(d=>d.Name)
        </div>
        <div class=form-group>
            @Html.DisplayNameFor(d=>d.Category)
            @Html.EditorFor(d=>d.Category)
        </div>
        <div class=form-group>
            @Html.DisplayNameFor(d=>d.BiddingAmount)
            @Html.EditorFor(d=>d.BiddingAmount)
        </div>
    </div>
    <br>
    <br>
    <input type="submit" value="Save" class="btn btn-default">

}
